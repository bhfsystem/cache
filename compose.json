{
  "version": "2",
  "services": {
    "cache": {
      "volumes": [
        "/data:/data",
        "/config:/config"
      ],
      "ports": [
        "${BLOCK_SSH_PORT}"
      ],
      "dns": "172.28.128.1",
      "dns_search": "node.consul",
      "image": "${BLOCK_REGISTRY}/block:cache",
      "hostname": "cache"
    },
    "consul": {
      "volumes": [
        "/data:/data",
        "/config:/config"
      ],
      "ports": [
        "${BLOCK_SSH_PORT}",
        "8400:8400"
      ],
      "dns": "172.28.128.1",
      "dns_search": "node.consul",
      "image": "${BLOCK_REGISTRY}/block:consul",
      "hostname": "consul"
    },
    "dnsmasq": {
      "volumes": [
        "/data:/data",
        "/config:/config"
      ],
      "ports": [
        "${BLOCK_SSH_PORT}",
        "53:5353",
        "53:5353/udp"
      ],
      "dns": "172.28.128.1",
      "dns_search": "node.consul",
      "image": "${BLOCK_REGISTRY}/block:dnsmasq",
      "hostname": "dnsmasq"
    },
    "openvpn": {
      "volumes": [
        "/data:/data",
        "/config:/config"
      ],
      "ports": [
        "${BLOCK_SSH_PORT}"
      ],
      "dns": "172.28.128.1",
      "dns_search": "node.consul",
      "image": "${BLOCK_REGISTRY}/block:openvpn",
      "hostname": "openvpn"
    },
    "squid": {
      "volumes": [
        "/data:/data",
        "/config:/config"
      ],
      "ports": [
        "${BLOCK_SSH_PORT}",
        "3128:3128"
      ],
      "dns": "172.28.128.1",
      "dns_search": "node.consul",
      "image": "${BLOCK_REGISTRY}/block:squid",
      "hostname": "squid"
    },
    "nexus": {
      "volumes": [
        "/data:/data",
        "/config:/config"
      ],
      "ports": [
        "${BLOCK_SSH_PORT}",
        "8081:8081",
        "5000:5000"
      ],
      "dns": "172.28.128.1",
      "dns_search": "node.consul",
      "image": "${BLOCK_REGISTRY}/block:nexus",
      "hostname": "nexus"
    },
    "nginx": {
      "volumes": [
        "/data:/data",
        "/config:/config"
      ],
      "ports": [
        "${BLOCK_SSH_PORT}",
        "80:8888"
      ],
      "dns": "172.28.128.1",
      "dns_search": "node.consul",
      "image": "${BLOCK_REGISTRY}/block:nginx",
      "hostname": "nginx"
    }
  }
}
